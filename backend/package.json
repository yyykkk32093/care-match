{
    "name": "backend",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "NODE_ENV=local npx ts-node --project tsconfig.server.json src/api/server.ts --esm",
        "build": "tsc -p tsconfig.server.json",
        "start": "NODE_ENV=production node dist/api/server.js"
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "dependencies": {
        "express": "^5.1.0",
        "cors": "^2.8.5",
        "body-parser": "^2.2.0",
        "dotenv-flow": "^4.1.0",
        "bcrypt": "^6.0.0"
    },
    "devDependencies": {
        "@types/express": "^5.0.5",
        "@types/cors": "^2.8.19",
        "@types/body-parser": "^1.19.6",
        "@types/bcrypt": "^6.0.0",
        "@types/node": "^22.19.0",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "~5.8.3"
    }
}